{
  "name": "vibeflow",
  "version": "0.1.0",
  "description": "Autonomous refactoring pipeline that transforms monolithic backend codebases into cleanly separated modular monoliths",
  "author": "Takumi Mita",
  "license": "MIT",
  "bin": {
    "vf": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsc",
    "clean": "rimraf dist",
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "security": "gitleaks detect --source . --verbose --redact",
    "security:ci": "gitleaks detect --source . --report-format json --report-path gitleaks-report.json"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.0",
    "@mastra/core": "^0.10.6",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "refactoring",
    "modular-monolith",
    "code-transformation",
    "ai-powered",
    "claude",
    "mastra"
  ]
}
